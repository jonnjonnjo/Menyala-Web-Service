generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IotMeasurement {
  id           Int      @id @default(autoincrement())
  temperature  Float
  base64Encode String
  gas          Int
  createdAt    DateTime @default(now())
  incidents    Incident?
}

model Incident {
  id        Int            @id @default(autoincrement())
  measure   IotMeasurement @relation(fields: [measureId], references: [id])
  measureId Int            @unique
}
